<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-usr-table" author="doddt2">
        <createTable tableName="usr">
            <column name="usr_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="usr-username-unique" author="doddt2">
        <addUniqueConstraint columnNames="username"
                             constraintName="usr_c1"
                             tableName="usr"/>
    </changeSet>

    <changeSet id="create-phone-table" author="aprietoa">
        <createTable tableName="phone">
            <column name="phone_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="usr_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="user-phone-foreignKey" author="aprietoa">
        <addForeignKeyConstraint baseColumnNames="usr_id"
                                 baseTableName="phone"
                                 constraintName="fk_phone"
                                 referencedColumnNames="usr_id"
                                 referencedTableName="usr"
        />
    </changeSet>

    <changeSet id="create-change-name-table" author="aprietoa">
        <createTable tableName="changename">
            <column name="changename_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="usr_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
