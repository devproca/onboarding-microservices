<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="create-usr-table" author="doddt">
        <createTable tableName="usr">
            <column name="usr_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="create-phone-table" author="essama">
        <createTable tableName="phone">
            <column name="phone_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="usr_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="create-namechange-table" author="essama">
        <createTable tableName="namechange">
            <column name="namechange_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="usr_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="previous_username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="previous_firstname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_firstname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="previous_lastname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_lastname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
