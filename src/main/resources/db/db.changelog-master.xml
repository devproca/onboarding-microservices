<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-usr-table" author="doddt">
        <createTable tableName="usr">
            <column name="usr_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-phone-table" author="lagusc">
        <createTable tableName="phone">
            <column name="phone_id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="usr_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="is_verified" type="boolean"> </column>
            <column name="verify_code" type="varchar(6)"> </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
